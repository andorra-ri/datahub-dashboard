{
  "extends": "stylelint-config-standard",
  rules: {
    "indentation": "tab",
    "unit-whitelist": ["px", "em", "vh", "vw", "rem", "%", "s", "deg", "fr"],
    "at-rule-no-unknown": [true, {
      ignoreAtRules: [
        "import",
        "function",
        "if",
        "each",
        "include",
        "mixin",
        "extend",
        "if",
        "else",
        "each",
        "for",
        "while"
      ]
    }]
  }
}
